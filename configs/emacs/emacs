;; Add Melpa repository
(require 'package)
(add-to-list 'package-archives
	     '("melpa" . "http://melpa.milkbox.net/packages/")
	     t)

(package-initialize)

;; Set user-installed packages variable, these things MUST be installed
(setq package-selected-packages '(markdown-mode markdown-mode+))

;; Fetch list of available packages
(unless package-archive-contents
  (package-refresh-contents))

;; Install them (this command reqires emacs 25.1+)
(package-install-selected-packages)

;; Always load best builtin theme
(load-theme 'wombat t)

;; Support mouse wheel scrolling (when possible)
(when (require 'mwheel nil 'noerror)
  (mouse-wheel-mode t))

;; Show line-number globally
(global-linum-mode 1)

;; Show column-number in the mode line
(column-number-mode t)

;; Set standard indent to 4, ident 4 chars, force use of spaces
(setq standard-indent 4)
(setq tab-width 4)
(setq indent-tabs-mode nil)

;; Line by line scrolling
(setq scroll-step 1)

;; Turn of noobscreen
(setq inhibit-splash-screen t)

